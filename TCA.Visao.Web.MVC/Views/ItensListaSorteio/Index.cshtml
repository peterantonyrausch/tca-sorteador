@model IEnumerable<TCA.Visao.Web.MVC.Models.ItemListaSorteioViewModel>

@{
    ViewBag.Title = "Itens da lista sorteio";
}

<h2>Itens da lista sorteio - @ViewBag.NomeListaSorteio</h2>

<p>
    @Html.ActionLink("Novo", "Criar", new { idListaSorteio = @ViewBag.IdListaSorteio, nomeListaSorteio = @ViewBag.NomeListaSorteio }, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            Item
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdItemListaSorteio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.IdItemListaSorteio, idListaSorteio = item.IdListaSorteio, nomeListaSorteio = @ViewBag.NomeListaSorteio }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Excluir", "Excluir", new { id = item.IdItemListaSorteio }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>